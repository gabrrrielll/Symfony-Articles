{% extends 'base.html.twig' %}

{% block title %}SymphArt Articles{% endblock %}

{% block body %}
<h1>{{article.title}}</h1>
<p>{{article.body}}</p>
<hr>
<div class="d-flex justify-content-end">
<a href="/article/edit/{{ article.id }}" class="btn btn-primary">Edit</a>&nbsp; 
<a href="/article/delete/{{ article.id }}" class="btn btn-danger delete-article" data-id="{{ article.id }}">Delete</a>
</div>
<a href="/">Go back</a>

{% endblock %}

